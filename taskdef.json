{
  "family": "order-service-task",
  "executionRoleArn": "arn:aws:iam::230027225622:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::230027225622:role/ecsTaskRole",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "order-service",
      "image": "230027225622.dkr.ecr.us-east-1.amazonaws.com/pabitra/orders-service:latest",
      "portMappings": [
        { "containerPort": 4000, "protocol": "tcp" }
      ],
      "essential": true,
      "environment": [
        { "name": "AWS_REGION", "value": "us-east-1" },
        { "name": "DYNAMODB_TABLE", "value": "Orders" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/order-service",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512"
}
